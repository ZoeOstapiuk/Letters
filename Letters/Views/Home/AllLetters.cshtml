@model IEnumerable<Letters.Models.Letter>

<div class="container">
    @foreach (Letters.Models.Letter l in Model)
    {
        <div class="item-letter-container">
            <div class="w3-panel w3-card-4 item-letter w3-white">
                @if (l.Content.Length <= 200)
                {
                    @l.Content
                }
                else
                {
                    @(l.Content.Substring(0, 200) + "...")
                }
            </div>
            <a href="@Url.Action("EditLetter", new { id = l.LetterId })" class="w3-btn-floating w3-green"><span class="glyphicon glyphicon-pencil"/></a>
            <a href="@Url.Action("DeleteLetter", new { id = l.LetterId })" class="w3-btn-floating w3-red"><span class="glyphicon glyphicon-remove" /></a>
        </div>
    }
</div>


