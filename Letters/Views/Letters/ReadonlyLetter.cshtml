@model Letters.Models.LetterAuthorView

<div class="w3-round-xxlarge letter-author-container">
    <div class="text-right"><button class="btn btn-danger" onclick="hideAuthorLetter($(this).parents('.showablePart'))"><span class="glyphicon glyphicon-resize-small" /></button></div>
    <div>
        <div class="w3-card-4 form-card">
            <div class="w3-container w3-green">
                <h2>Sender</h2>
            </div>
            <div style="padding: 10px; display:inline-flex">
                <p>
                    Name: @Html.TextBoxFor(m => m.Author.Name, "", new { @class = "w3-input w3-border w3-round-xxlarge input-field", @readonly = "readonly" })
                </p>
                <p>
                    Age: @Html.TextBoxFor(m => m.Author.Age, "", new { @class = "w3-input w3-border w3-round-xxlarge input-field", @readonly = "readonly" })
                </p>
                <p>
                    Letters written: @Html.TextBoxFor(m => m.Author.TotalLetters, "", new { @class = "w3-input w3-border w3-round-xxlarge input-field", @readonly = "readonly" })
                </p>
            </div>
        </div>
        <div class="w3-card-4 table-for-letter">
            <div>
                @Html.TextAreaFor(m => m.Letter.Content, new { @class = "letter-sheet", @readonly = "readonly" })
            </div>
        </div>
    </div>
</div>


