<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>@ViewBag.Title</title>

    <script src="~/Scripts/jquery-1.10.2.js"></script>
    <script src="~/scripts/jquery-1.10.2.intellisense.js"></script>
    <script src="~/scripts/jquery.unobtrusive-ajax.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>

    <script src="//code.jquery.com/ui/1.12.0/jquery-ui.js"></script>

    <script src="~/scripts/bootstrap.min.js"></script>
    <script src="~/scripts/bootstrap.js"></script>

    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" href="~/Content/W3Lib.css" type="text/css" />

    <script>
        function hideAlert() {
            $(".alert-santa-reply").hide("slide", { direction: 'up' }, 500);
        }
    </script>
</head>

<body class="main-theme">
    <nav class="navbar navbar-default navbar-inverse w3-card-4">
        <div class="container-fluid">
            <div class="navbar-header">
                @Html.ActionLink("Home", "Index", "Home", null, new { @class = "navbar-brand" })
            </div>
            <ul class="nav navbar-nav">
                <li>@Html.ActionLink("Santa's archive", "AllLetters", "Home")</li>
            </ul>
            <ul class="nav navbar-nav navbar-right">
                <li class="w3-text-white w3-margin">@User.Identity.Name</li>
                @if (!System.String.IsNullOrEmpty(@User.Identity.Name))
                {
                    <li>@Html.ActionLink("Write letter", "CreateLetter", "Letters")</li>
                    <li>@Html.ActionLink("Logout", "Logout", "Account", null, new { returnUrl = @Request.Url.AbsoluteUri })</li>
                }
                else
                {
                    <li>@Html.ActionLink("Login", "Login", "Account", null, new { returnUrl = @Request.Url.AbsoluteUri })</li>
                }
            </ul>
        </div>
    </nav>

    <div>
        @RenderBody()
        <footer>
            <p>&copy; @DateTime.Now.Year - Letters!</p>
        </footer>
    </div>
</body>
</html>